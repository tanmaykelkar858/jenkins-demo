pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                echo 'The project is getting built......'
                sleep 20
            }
        }
        
         stage('Test') {
            steps {
                echo 'The project is getting tested......'
                sleep 20
            }
        }
        
        stage('Deploy') {
            steps {
                echo 'The project is getting deployed......'
                sleep 20
            }
        }
    }
}
